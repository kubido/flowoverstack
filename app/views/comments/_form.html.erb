<%= form_with model: [commentable, commentable.comments.new], url: url_path do |form| %>
<table>
  <tbody>
    <tr>
      <td>
        <div id="comment-text">
          <% if commentable.is_a? Question %>
          <%= form.text_area :body, class: "form-control", cols: "68", rows: "2", placeholder: "Gunakan komentar untuk meminta informasi lebih lanjut atau menyarankan perbaikan. Hindari menjawab pertanyaan di komentar." %>
          <% elsif commentable.is_a? Answer %>
          <%= form.text_area :body, class: "form-control", cols: "68", rows: "2", placeholder: 'Gunakan komentar untuk meminta informasi lebih lanjut atau menyarankan perbaikan. Hindari komentar seperti "+1" atau "terima kasih".' %>
          <% end %>
        </div>
      </td>
      <td class="vt">
        <%= form.submit "Komentar", class: "btn btn-info" %>
      </td>
    </tr>
    <tr>
      <td colspan="2">
        <span id="comment-alert" class="text-counter cool"><%= I18n.t(:comment_alert_default, scope: :custom) %></span>
      </td>
    </tr>
  </tbody>
</table>
<% end %>